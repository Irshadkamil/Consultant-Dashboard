<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ConsultantRequest</servlet-name>
        <servlet-class>ConsultantRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultantDetails</servlet-name>
        <servlet-class>ConsultantDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllRequests</servlet-name>
        <servlet-class>AllRequests</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultantReject</servlet-name>
        <servlet-class>ConsultantReject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchConsultant</servlet-name>
        <servlet-class>SearchConsultant</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultantRequest</servlet-name>
        <url-pattern>/ConsultantRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultantDetails</servlet-name>
        <url-pattern>/ConsultantDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllRequests</servlet-name>
        <url-pattern>/AllRequests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultantReject</servlet-name>
        <url-pattern>/ConsultantReject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchConsultant</servlet-name>
        <url-pattern>/SearchConsultant</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
